<resources>

    <!-- Base application theme. -->
    <style name="AppTheme.NoActionBar" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:actionMenuTextColor">@android:color/white</item>
        <item name="drawerArrowStyle">@style/DrawerArrowStyle</item>
        <item name="customBgColor">@color/white</item>
        <item name="customTextColor">@color/black</item>
        <item name="customBgViewColor">@color/customBgViewColor</item>
        <item name="customTextHintColor">@color/customTextHintColor</item>
        <item name="customTableTime">@color/customTableColorLight</item>
        <item name="customTableTimeText">@color/colorPrimary</item>
        <item name="customPaint">@color/colorStatusOFFBold</item>



    </style>

    <style name="MaterialAlertDialog_rounded" parent="@style/ThemeOverlay.MaterialComponents.MaterialAlertDialog">
        <item name="shapeAppearanceOverlay">@style/DialogCorners</item>
    </style>

    <style name="DialogCorners">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">24dp</item>
    </style>

    <style name="DrawerArrowStyle" parent="@style/Widget.AppCompat.DrawerArrowToggle">
        <item name="spinBars">true</item>
        <item name="color">@android:color/white</item>
    </style>

    <style name="MyRadioButton" parent="Theme.AppCompat.Light">
        <item name="colorControlNormal">@color/customTextHintColor</item>
        <item name="colorControlActivated">@color/colorPrimary</item>
        <item name="android:state_selected">@color/colorPrimary</item>
    </style>

    <style name="AppTheme.Light.Mode" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="colorPrimary">@color/colorAccent</item>
    </style>

    <style name="MyEditTextTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorControlNormal">@color/customBgViewColor</item>
        <item name="colorControlActivated">@color/colorActionText</item>
        <item name="colorControlHighlight">@color/colorActionText</item>
    </style>

    <style name="MyDialogTheme" parent="@style/ThemeOverlay.MaterialComponents.MaterialAlertDialog">
        <item name="android:background">?attr/customBgColor</item>
        <item name="colorOnSurface">@color/colorPrimary</item>
        <item name="buttonBarPositiveButtonStyle">@style/PositiveButtonStyle</item>
    </style>

    <style name="PositiveButtonStyle" parent="@style/Widget.MaterialComponents.Button">
        <!-- text color for the button -->
        <item name="android:textColor">@color/colorPrimary</item>
        <!-- Background tint for the button -->
    </style>
    
    <style name="textfontstyle" parent="TextAppearance.AppCompat.Small">
        <item name="fontFamily">@font/montserrat</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">@dimen/card_text_size</item>
    </style>

</resources>
