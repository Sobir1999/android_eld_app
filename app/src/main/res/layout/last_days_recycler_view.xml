<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <View
        android:id="@+id/idTopView"
        android:background="@color/colorBackgroundMainView"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        tools:ignore="MissingConstraints" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/idBasic"
        app:layout_constraintTop_toBottomOf="@id/idTopView"
        android:padding="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:ignore="MissingConstraints">

        <TextView
            android:id="@+id/idTableDay"
            android:text="Sun"
            android:textSize="14sp"
            android:textColor="?attr/customTextColor"
            android:drawablePadding="5dp"
            style="@style/TextAppearance.AppCompat.Menu"
            android:drawableLeft="@drawable/ic_baseline_edit_24"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            tools:ignore="MissingConstraints" />

        <TextView
            android:id="@+id/idTableMonth"
            android:text="Apr 11"
            android:textSize="14sp"
            android:textColor="?attr/customTextHintColor"
            android:layout_marginRight="5dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintRight_toLeftOf="@id/idTableView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:ignore="MissingConstraints" />

        <View
            android:id="@+id/idTableView"
            android:background="?attr/customBgViewColor"
            app:layout_constraintRight_toLeftOf="@id/idTableDvir"
            app:layout_constraintLeft_toRightOf="@id/idTableDay"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_width="2dp"
            android:layout_height="30dp"
            tools:ignore="MissingConstraints" />

        <TextView
            android:id="@+id/idTableTime"
            android:text="00h 00m"
            android:textSize="14sp"
            android:textColor="?attr/customTextHintColor"
            android:layout_marginLeft="5dp"
            app:layout_constraintLeft_toRightOf="@id/idTableView"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:ignore="MissingConstraints" />

        <TextView
            android:id="@+id/idTableDvir"
            android:text="@string/no_dvir"
            android:textSize="14sp"
            android:textColor="?attr/customTextColor"
            android:drawablePadding="5dp"
            style="@style/TextAppearance.AppCompat.Subhead"
            app:layout_constraintLeft_toRightOf="@id/idTableTime"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintRight_toLeftOf="@id/idTableRadioBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:ignore="MissingConstraints"
            app:drawableLeftCompat="@drawable/ic_baseline_settings_applications_24" />

        <ImageView
            android:id="@+id/idTableRadioBtn"
            android:src="@drawable/state_unchacked"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:ignore="MissingConstraints" />

        <View
            android:id="@+id/idCLickableView"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintRight_toLeftOf="@id/idTableDvir"
            app:layout_constraintLeft_toRightOf="@id/idTableDay"
            android:layout_width="0dp"
            android:layout_height="0dp" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <View
        android:id="@+id/idBottomView"
        app:layout_constraintTop_toBottomOf="@id/idBasic"
        android:background="?attr/customBgViewColor"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        tools:ignore="MissingConstraints" />

    <com.iosix.eldblesample.customViews.CustomStableRulerChart
        android:id="@+id/idLastDaysTable"
        app:layout_constraintTop_toBottomOf="@id/idBottomView"
        android:visibility="gone"
        android:padding="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:ignore="MissingConstraints" />

</androidx.constraintlayout.widget.ConstraintLayout>