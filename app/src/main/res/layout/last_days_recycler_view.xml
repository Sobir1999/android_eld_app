<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <View
        android:background="@color/colorBackgroundMainView"
        android:layout_width="match_parent"
        android:layout_height="1dp" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/idBasic"
        android:layout_margin="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:ignore="MissingConstraints">

        <TextView
            android:id="@+id/idTableDay"
            android:text="Sat"
            android:drawableLeft="@drawable/ic_baseline_edit_24"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:ignore="MissingConstraints" />

        <TextView
            android:id="@+id/idTableMonth"
            android:text="Apr 11"
            android:layout_marginLeft="10dp"
            app:layout_constraintLeft_toRightOf="@id/idTableDay"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintRight_toLeftOf="@id/idTableView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:ignore="MissingConstraints" />

        <View
            android:id="@+id/idTableView"
            app:layout_constraintLeft_toRightOf="@id/idTableMonth"
            android:background="@color/colorBackgroundMainView"
            app:layout_constraintRight_toLeftOf="@id/idTableTime"
            android:layout_width="2dp"
            android:layout_height="30dp"
            tools:ignore="MissingConstraints" />

        <TextView
            android:id="@+id/idTableTime"
            android:text="00h 00m"
            android:layout_marginRight="10dp"
            app:layout_constraintLeft_toRightOf="@id/idTableView"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintRight_toLeftOf="@id/idTableDvir"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:ignore="MissingConstraints" />

        <TextView
            android:id="@+id/idTableDvir"
            android:text="No DVIR"
            app:layout_constraintLeft_toRightOf="@id/idTableTime"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintRight_toLeftOf="@id/idTableRadioBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:ignore="MissingConstraints"
            app:drawableLeftCompat="@drawable/ic_baseline_settings_applications_24" />

        <ImageView
            android:id="@+id/idTableRadioBtn"
            android:src="@drawable/state_unchacked"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:ignore="MissingConstraints" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <View
        android:background="@color/colorBackgroundMainView"
        android:layout_width="match_parent"
        android:layout_height="1dp" />

