<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.LogFragment"
    android:orientation="vertical"
    android:background="@color/colorBackgroundMainView">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:background="#FFFFFF">

        <com.iosix.eldblesample.customViews.CustomStableRulerChart
            android:id="@+id/idCustomChart"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:ignore="MissingConstraints" />

    <View
        android:background="@color/colorBackgroundMainView"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        tools:ignore="MissingConstraints"
        app:layout_constraintTop_toBottomOf="@id/idCustomChart"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"/>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="35dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/idCustomChart"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:layout_marginEnd="10dp"
            android:text="@string/weight_station"
            android:textColor="#3A3838"
            android:textAllCaps="false"
            android:drawableStart="@drawable/balance"
            android:drawablePadding="6dp"
            android:paddingStart="6dp"
            android:paddingEnd="6dp"
            android:background="@drawable/weight_station_button_bg"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <View
        android:background="@color/colorBackgroundMainView"
        android:layout_width="match_parent"
        android:layout_height="10dp"
        tools:ignore="MissingConstraints" />

    <androidx.recyclerview.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/recyclerView_log_page"
        android:background="#FFFFFF"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="10dp"/>

</LinearLayout>