<!--                    app:color="@color/colorStatusSB"-->
<!--                    app:layout_constraintBottom_toBottomOf="parent"-->
<!--                    android:layout_width="wrap_content"-->
<!--                    android:layout_height="wrap_content"-->
<!--                    tools:ignore="MissingConstraints" />-->

<!--                <com.iosix.eldblesample.customViews.StatusCustomButtonView-->
<!--                    android:id="@+id/statusDR"-->
<!--                    app:image="@drawable/ic_baseline_power_settings_new_24"-->
<!--                    app:layout_constraintLeft_toRightOf="@+id/statusSB"-->
