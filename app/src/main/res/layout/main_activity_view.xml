<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:orientation="vertical"
        android:padding="10dp"
        android:clickable="true"
        android:focusable="true"
        android:background="@color/colorBackgroundMainView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:paddingHorizontal="8dp"
            android:paddingVertical="16dp"
            android:background="#fff"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <androidx.cardview.widget.CardView
                android:id="@+id/idCardStatus"
                app:cardCornerRadius="10dp"
                app:cardBackgroundColor="@color/colorStatusOFF"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                tools:ignore="MissingConstraints" >

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:padding="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:id="@+id/idStatusImage"
                        android:src="@drawable/ic_baseline_power_settings_new_24"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintLeft_toLeftOf="parent"
                        android:layout_marginHorizontal="10dp"
                        android:layout_width="40dp"
                        android:layout_height="40dp" />

                    <TextView
                        android:id="@+id/idStatusText"
                        android:text="@string/off"
                        android:layout_marginStart="10dp"
                        style="@style/TextAppearance.AppCompat.Button"
                        app:layout_constraintLeft_toRightOf="@id/idStatusImage"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                    <TextView
                        android:id="@+id/idStatusTime"
                        android:text="00:00:00"
                        android:textStyle="bold"
                        style="@style/TextAppearance.AppCompat.Headline"
                        app:layout_constraintRight_toRightOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                </androidx.constraintlayout.widget.ConstraintLayout>
            </androidx.cardview.widget.CardView>

            <androidx.constraintlayout.widget.ConstraintLayout
                app:layout_constraintTop_toBottomOf="@id/idCardStatus"
                android:layout_marginVertical="10dp"
                android:id="@+id/idChangeStatus"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                tools:ignore="MissingConstraints">

                <TextView
                    android:text="@string/change_status"
                    style="@style/TextAppearance.AppCompat.Body2"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <Button
                    android:id="@+id/idDRWithExeption"
                    android:text="DR With Exeption"
                    android:paddingHorizontal="20dp"
                    android:textColor="@color/colorAccent"
                    android:background="@drawable/background_dr_with_exception_btn"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/idStatusButton"
                app:layout_constraintTop_toBottomOf="@id/idChangeStatus"
                android:nestedScrollingEnabled="true"
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                tools:ignore="MissingConstraints">

                <LinearLayout
                    android:id="@+id/idIncludeOff"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:gravity="center_horizontal"
                    app:layout_constraintRight_toLeftOf="@id/idIncludeSb"
                    app:layout_constraintLeft_toLeftOf="parent"
                    android:orientation="vertical" >

                    <androidx.cardview.widget.CardView
                        android:id="@+id/cardOff"
                        app:cardBackgroundColor="@color/colorStatusOFF"
                        app:cardCornerRadius="10dp"
                        android:layout_width="80dp"
                        android:layout_height="80dp">

                        <LinearLayout
                            android:orientation="vertical"
                            android:gravity="center"
                            android:layout_gravity="center"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">

                            <ImageView
                                android:id="@+id/imageOff"
                                android:src="@drawable/power"
                                android:layout_width="35dp"
                                android:layout_height="35dp" />

                            <TextView
                                android:id="@+id/statusOff"
                                android:textStyle="bold"
                                android:text="@string/off"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content" />
                        </LinearLayout>
                    </androidx.cardview.widget.CardView>

                    <TextView
                        android:id="@+id/titleOff"
                        android:text="@string/off_duty"
                        android:layout_marginTop="5dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/idIncludeSb"
                    app:layout_constraintLeft_toRightOf="@id/idIncludeOff"
                    app:layout_constraintRight_toLeftOf="@id/idIncludeDr"
                    android:gravity="center_horizontal"
                    android:orientation="vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" >

                    <androidx.cardview.widget.CardView
                        android:id="@+id/cardSB"
                        app:cardBackgroundColor="@color/colorStatusSB"
                        app:cardCornerRadius="10dp"
                        android:layout_width="80dp"
                        android:layout_height="80dp">

                        <LinearLayout
                            android:orientation="vertical"
                            android:gravity="center"
                            android:layout_gravity="center"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">

                            <ImageView
                                android:id="@+id/imageSB"
                                android:src="@drawable/sleeping"
                                android:layout_width="35dp"
                                android:layout_height="35dp" />

                            <TextView
                                android:id="@+id/statusSB"
                                android:textStyle="bold"
                                android:text="@string/sb"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content" />
                        </LinearLayout>
                    </androidx.cardview.widget.CardView>

                    <TextView
                        android:id="@+id/titleSB"
                        android:text="@string/sleeper_berth"
                        android:layout_marginTop="5dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                </LinearLayout>

                <LinearLayout
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:gravity="center_horizontal"
                    app:layout_constraintLeft_toRightOf="@id/idIncludeSb"
                    app:layout_constraintRight_toLeftOf="@id/idIncludeOn"
                    android:id="@+id/idIncludeDr"
                    layout="@layout/custom_button_dr_item"
                    android:orientation="vertical" >

                    <androidx.cardview.widget.CardView
                        android:id="@+id/cardDR"
                        app:cardBackgroundColor="@color/colorStatusDR"
                        app:cardCornerRadius="10dp"
                        android:layout_width="80dp"
                        android:layout_height="80dp">

                        <LinearLayout
                            android:orientation="vertical"
                            android:gravity="center"
                            android:layout_gravity="center"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">

                            <ImageView
                                android:id="@+id/imageDR"
                                android:src="@drawable/driving"
                                android:layout_width="35dp"
                                android:layout_height="35dp" />

                            <TextView
                                android:id="@+id/statusDR"
                                android:textStyle="bold"
                                android:text="@string/dr"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content" />
                        </LinearLayout>
                    </androidx.cardview.widget.CardView>

                    <TextView
                        android:id="@+id/titleDR"
                        android:text="@string/driving"
                        android:layout_marginTop="5dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/idIncludeOn"
                    android:gravity="center_horizontal"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintLeft_toRightOf="@id/idIncludeDr"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    layout="@layout/custom_button_on_item"
                    android:orientation="vertical" >

                    <androidx.cardview.widget.CardView
                        android:id="@+id/cardON"
                        app:cardBackgroundColor="@color/colorStatusON"
                        app:cardCornerRadius="10dp"
                        android:layout_width="80dp"
                        android:layout_height="80dp">

                        <LinearLayout
                            android:orientation="vertical"
                            android:gravity="center"
                            android:layout_gravity="center"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">

                            <ImageView
                                android:id="@+id/imageON"
                                android:src="@drawable/ic_baseline_power_settings_new_24"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content" />

                            <TextView
                                android:id="@+id/status"
                                android:textStyle="bold"
                                android:text="@string/on"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content" />
                        </LinearLayout>
                    </androidx.cardview.widget.CardView>

                    <TextView
                        android:id="@+id/title"
                        android:text="@string/on_duty"
                        android:layout_marginTop="5dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                </LinearLayout>
            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/idVisibilityViewCons"
                android:layout_margin="10dp"
                android:visibility="gone"
                app:layout_constraintTop_toBottomOf="@+id/idStatusButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                tools:ignore="MissingConstraints">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/isVisLocationCons"
                    android:paddingVertical="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/locationText"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        android:text="Location"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                    <TextView
                        android:id="@+id/idLoactionIcon"
                        android:text="Your Location"
                        android:drawableRight="@drawable/ic_baseline_location_on_24"
                        app:layout_constraintRight_toRightOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                </androidx.constraintlayout.widget.ConstraintLayout>

                <EditText
                    android:id="@+id/idLocationEdit"
                    app:layout_constraintTop_toBottomOf="@id/isVisLocationCons"
                    android:hint="Your Location"
                    android:inputType="textCapSentences"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/isVisNotesCons"
                    android:paddingVertical="10dp"
                    app:layout_constraintTop_toBottomOf="@id/idLocationEdit"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/noteText"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        android:text="Notes"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                    <TextView
                        android:id="@+id/idNoteIcon"
                        android:text="Add notes"
                        app:layout_constraintRight_toRightOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                </androidx.constraintlayout.widget.ConstraintLayout>

                <EditText
                    android:id="@+id/idNoteEdit"
                    app:layout_constraintTop_toBottomOf="@id/isVisNotesCons"
                    android:hint="Enter notes"
                    android:drawableRight="@drawable/note_add_icon"
                    android:inputType="textCapSentences"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/isVisDocumentCons"
                    android:paddingVertical="10dp"
                    app:layout_constraintTop_toBottomOf="@id/idNoteEdit"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/documentText"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        android:text="Document"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                    <TextView
                        android:id="@+id/idDocumentIcon"
                        android:text="Attach"
                        android:drawableRight="@drawable/ic_baseline_attach_file_24"
                        app:layout_constraintRight_toRightOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                </androidx.constraintlayout.widget.ConstraintLayout>

                <View
                    android:id="@+id/idVisibilityView"
                    app:layout_constraintTop_toBottomOf="@id/isVisDocumentCons"
                    android:layout_marginVertical="10dp"
                    android:background="@color/colorBackgroundMainView"
                    android:layout_width="match_parent"
                    android:layout_height="2dp" />

                <LinearLayout
                    app:layout_constraintTop_toBottomOf="@id/idVisibilityView"
                    android:orientation="horizontal"
                    android:layout_marginVertical="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <Button
                        android:id="@+id/idVisButtonCancel"
                        android:text="Cancel"
                        android:textColor="@color/colorAccent"
                        android:layout_margin="10dp"
                        android:background="@drawable/item_vis_button_background"
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content" />

                    <Button
                        android:id="@+id/idVisButtonSave"
                        android:text="Save"
                        android:textColor="@color/colorAccent"
                        android:layout_margin="10dp"
                        android:background="@drawable/item_vis_button_background"
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content" />
                </LinearLayout>
            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.constraintlayout.widget.ConstraintLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_marginVertical="10dp"
            android:background="#fff"
            android:focusable="true"
            android:clickable="true"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:padding="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                tools:ignore="MissingConstraints">

                <TextView
                    android:text="@string/today"
                    style="@style/TextAppearance.AppCompat.Body2"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    tools:ignore="MissingConstraints" />

                <TextView
                    android:id="@+id/idRecap"
                    android:text="@string/recap"
                    style="@style/TextAppearance.AppCompat.Subhead"
                    android:drawablePadding="5dp"
                    android:drawableRight="@drawable/ic_baseline_restore_24"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    tools:ignore="MissingConstraints" />
            </androidx.constraintlayout.widget.ConstraintLayout>

            <View
                android:background="@color/colorBackgroundMainView"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                tools:ignore="MissingConstraints" />

            <androidx.constraintlayout.widget.ConstraintLayout
                android:padding="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                tools:ignore="MissingConstraints">

                <TextView
                    android:id="@+id/idTableDay"
                    android:text="Sat"
                    android:drawablePadding="5dp"
                    style="@style/TextAppearance.AppCompat.Subhead"
                    android:drawableLeft="@drawable/ic_baseline_edit_24"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    tools:ignore="MissingConstraints" />

                <TextView
                    android:id="@+id/idTableMonth"
                    android:text="Apr 11"
                    android:layout_marginLeft="10dp"
                    app:layout_constraintLeft_toRightOf="@id/idTableDay"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintRight_toLeftOf="@id/idTableView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    tools:ignore="MissingConstraints" />

                <View
                    android:id="@+id/idTableView"
                    app:layout_constraintLeft_toRightOf="@id/idTableMonth"
                    android:background="@color/colorBackgroundMainView"
                    app:layout_constraintRight_toLeftOf="@id/idTableTime"
                    android:layout_width="2dp"
                    android:layout_height="30dp"
                    tools:ignore="MissingConstraints" />

                <TextView
                    android:id="@+id/idTableTime"
                    android:text="00h 00m"
                    android:layout_marginRight="10dp"
                    app:layout_constraintLeft_toRightOf="@id/idTableView"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintRight_toLeftOf="@id/idTableDvir"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    tools:ignore="MissingConstraints" />

                <TextView
                    android:id="@+id/idTableDvir"
                    android:text="@string/no_dvir"
                    android:drawablePadding="5dp"
                    style="@style/TextAppearance.AppCompat.Subhead"
                    app:layout_constraintLeft_toRightOf="@id/idTableTime"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintRight_toLeftOf="@id/idTableRadioBtn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    tools:ignore="MissingConstraints"
                    app:drawableLeftCompat="@drawable/ic_baseline_settings_applications_24" />

                <ImageView
                    android:id="@+id/idTableRadioBtn"
                    android:src="@drawable/state_unchacked"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    tools:ignore="MissingConstraints" />
            </androidx.constraintlayout.widget.ConstraintLayout>

            <View
                android:background="@color/colorBackgroundMainView"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                tools:ignore="MissingConstraints" />

            <com.iosix.eldblesample.customViews.CustomLiveRulerChart
                android:id="@+id/idCustomLiveChart"
                android:padding="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                tools:ignore="MissingConstraints" />

            <View
                android:background="@color/colorBackgroundMainView"
                android:layout_width="match_parent"
                android:layout_height="2dp"
                tools:ignore="MissingConstraints" />

            <androidx.constraintlayout.widget.ConstraintLayout
                android:paddingVertical="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                tools:ignore="MissingConstraints">

                <Button
                    android:id="@+id/idTableBtnLog"
                    android:layout_width="0dp"
                    android:text="Log"
                    android:layout_margin="5dp"
                    android:textColor="@color/colorAccent"
                    app:layout_constraintRight_toLeftOf="@id/idTableBtnGeneral"
                    android:background="@drawable/background_table_section_button"
                    android:layout_height="30dp"
                    app:layout_constraintLeft_toLeftOf="parent"
                    tools:ignore="MissingConstraints" />

                <Button
                    android:id="@+id/idTableBtnGeneral"
                    android:layout_width="0dp"
                    android:text="General"
                    android:layout_margin="5dp"
                    android:textColor="@color/colorAccent"
                    app:layout_constraintLeft_toRightOf="@id/idTableBtnLog"
                    app:layout_constraintRight_toLeftOf="@id/idTableBtnDocs"
                    android:background="@drawable/background_table_section_button"
                    android:layout_height="30dp"
                    tools:ignore="MissingConstraints" />

                <Button
                    android:id="@+id/idTableBtnDocs"
                    android:layout_width="0dp"
                    android:text="Docs"
                    android:layout_margin="5dp"
                    android:textColor="@color/colorAccent"
                    app:layout_constraintLeft_toRightOf="@id/idTableBtnGeneral"
                    app:layout_constraintRight_toLeftOf="@id/idTableBtnDVIR"
                    android:background="@drawable/background_table_section_button"
                    android:layout_height="30dp"
                    tools:ignore="MissingConstraints" />

                <Button
                    android:id="@+id/idTableBtnDVIR"
                    android:layout_width="0dp"
                    android:text="DVIR"
                    android:layout_margin="5dp"
                    android:textColor="@color/colorAccent"
                    android:background="@drawable/background_table_section_button"
                    android:layout_height="30dp"
                    app:layout_constraintLeft_toRightOf="@id/idTableBtnDocs"
                    app:layout_constraintRight_toRightOf="parent"
                    tools:ignore="MissingConstraints" />
            </androidx.constraintlayout.widget.ConstraintLayout>

        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:focusable="true"
            android:clickable="true"
            android:background="#fff"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:padding="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" >

                <TextView
                    android:id="@+id/idLas14DayText"
                    android:drawableLeft="@drawable/ic_baseline_calendar_today_24"
                    android:text="Last 14 days"
                    android:drawablePadding="5dp"
                    style="@style/TextAppearance.AppCompat.Widget.ActionMode.Subtitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    tools:ignore="MissingConstraints" />

                <TextView
                    android:id="@+id/idLastDaysCheckAll"
                    app:layout_constraintRight_toRightOf="parent"
                    android:text="@string/check_all"
                    style="@style/TextAppearance.AppCompat.Widget.PopupMenu.Small"
                    android:drawablePadding="5dp"
                    android:drawableRight="@drawable/ic_baseline_check_circle_outline_24"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    tools:ignore="MissingConstraints" />
            </androidx.constraintlayout.widget.ConstraintLayout>

            <View
                android:background="@color/colorBackgroundMainView"
                android:layout_width="2dp"
                android:layout_height="wrap_content" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/idRecyclerView"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:nestedScrollingEnabled="false"/>
        </LinearLayout>
    </LinearLayout>
</androidx.core.widget.NestedScrollView>
