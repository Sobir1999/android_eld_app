<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:baselineAligned="false"
    android:orientation="vertical"
    android:paddingVertical="@dimen/dual_vertical_margin">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="32dp"
        android:baselineAligned="false"
        android:gravity="center"
        android:paddingHorizontal="@dimen/quarter_vertical_margin"
        android:orientation="horizontal">

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="6"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/weekday"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:drawablePadding="@dimen/quarter_vertical_margin"
                android:fontFamily="sans-serif-medium"
                android:layout_alignParentStart="true"
                android:gravity="center_vertical"
                android:text="Thu"
                app:drawableLeftCompat="@drawable/ic_baseline_nightlight_24"
                android:textColor="@color/black"
                app:drawableTint="@color/black" />

            <TextView
                android:id="@+id/monthDay"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentEnd="true"
                android:gravity="center_vertical"
                android:text="Jul 15"
                android:textColor="@color/black" />
        </RelativeLayout>

        <View
            android:layout_width="2dp"
            android:layout_height="match_parent"
            android:background="@color/black"
            android:layout_marginVertical="@dimen/dual_vertical_margin"
            android:layout_marginHorizontal="@dimen/half_vertical_margin"/>

        <TextView
            android:id="@+id/time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:layout_weight="2"
            android:drawablePadding="@dimen/dual_vertical_margin"
            android:text="@string/_00h_00m"
            android:textColor="@color/black"
            app:drawableTint="@color/black"
            app:drawableLeftCompat="@drawable/ic_baseline_access_time_24" />

        <TextView
            android:id="@+id/noDvirTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:layout_weight="2"
            android:drawablePadding="@dimen/dual_vertical_margin"
            android:text="No DVIR"
            android:textColor="@color/black"
            app:drawableTint="@color/black"
            app:drawableLeftCompat="@drawable/ic_repair" />

        <CheckBox
            android:id="@+id/checkbox"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginStart="@dimen/quarter_vertical_margin"
            android:button="@drawable/circle_checkbox"
            android:gravity="center" />

    </LinearLayout>

    <com.github.aakira.expandablelayout.ExpandableRelativeLayout
        android:id="@+id/accounts"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:visibility="visible"
        app:ael_duration="50"
        app:ael_expanded="false"
        app:ael_interpolator="accelerate">
        <com.iosix.eldblesample.customViews.CustomLiveRulerChart
            android:id="@+id/chartNoDVIR"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    </com.github.aakira.expandablelayout.ExpandableRelativeLayout>

</LinearLayout>
