<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:background="@drawable/background_main_view"
        android:layout_marginHorizontal="@dimen/card_view_corner_radius"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/delete_dvir"
            android:fontFamily="@font/montserrat"
            android:textStyle="bold"
            android:textColor="@color/colorPrimary"
            android:textSize="@dimen/card_text_size"
            android:layout_marginTop="@dimen/card_view_corner_radius"
            android:layout_marginHorizontal="@dimen/card_view_corner_radius"
            android:id="@+id/idDvirHeader"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/do_you_want_to_delete_dvir"
            android:layout_marginTop="@dimen/half_vertical_margin"
            android:layout_marginHorizontal="@dimen/card_view_corner_radius"
            android:textSize="@dimen/normal_text_size"
            android:fontFamily="@font/montserrat"
            android:textColor="?attr/customTextHintColor"
            android:textStyle="bold"
            android:id="@+id/idDvirTitle"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="end"
            android:layout_marginTop="@dimen/card_image_size"
            android:layout_marginBottom="@dimen/half_vertical_margin"
            android:gravity="end">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/yes"
                android:textStyle="bold"
                android:textColor="@color/colorPrimary"
                android:textSize="@dimen/card_text_size"
                android:textAllCaps="true"
                app:font = "@font/montserrat"
                android:layout_marginEnd="@dimen/drawer_icon_size"
                android:fontFamily="@font/montserrat"
                android:id="@+id/idDvirYes"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/no"
                android:textStyle="bold"
                android:textColor="@color/colorPrimary"
                android:textSize="@dimen/card_text_size"
                app:font = "@font/montserrat"
                android:textAllCaps="true"
                android:layout_marginEnd="@dimen/drawer_icon_size"
                android:fontFamily="@font/montserrat"
                android:id="@+id/idDvirNo"/>

        </LinearLayout>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>