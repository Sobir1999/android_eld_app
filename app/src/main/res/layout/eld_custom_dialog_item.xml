<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:paddingVertical="@dimen/half_vertical_margin"
    android:paddingHorizontal="@dimen/card_view_corner_radius"
    android:background="@drawable/background_main_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:id="@+id/idBTConnection"
        android:layout_marginVertical="@dimen/half_vertical_margin"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:src="@drawable/ic_baseline_wifi_24"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:textColor="?attr/customTextHintColor"
            android:id="@+id/idEldConnection"
            android:text="Eld Connection State"
            android:textSize="@dimen/normal_text_size"
            android:layout_marginHorizontal="@dimen/half_vertical_margin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/idIsConnected"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="@dimen/normal_text_size"
            android:gravity="end"
            android:textColor="@color/colorPrimary"/>
    </LinearLayout>

    <View
        android:background="@color/colorBackgroundMainView"
        android:layout_width="match_parent"
        android:layout_height="1dp" />

    <LinearLayout
        android:id="@+id/idGPSConnection"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginVertical="@dimen/half_vertical_margin"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_baseline_gps_fixed_24" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/half_vertical_margin"
            android:layout_weight="1"
            android:text="GPS Connection"
            android:textColor="?attr/customTextHintColor"
            android:textSize="@dimen/normal_text_size" />

        <TextView
            android:id="@+id/idGpsConnect"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/colorPrimary"
            android:textSize="@dimen/normal_text_size"
            tools:ignore="MissingConstraints,UseSwitchCompatOrMaterialXml" />
    </LinearLayout>

    <View
        android:background="@color/colorBackgroundMainView"
        android:layout_width="match_parent"
        android:layout_height="1dp" />

    <LinearLayout
        android:id="@+id/idEngineOff"
        android:layout_marginVertical="@dimen/half_vertical_margin"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:src="@drawable/engine_off"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />


        <TextView
            android:text="Engine State"
            android:textColor="?attr/customTextHintColor"
            android:layout_marginHorizontal="@dimen/half_vertical_margin"
            android:textSize="@dimen/normal_text_size"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/idEngineState"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="@dimen/normal_text_size"
            android:gravity="end"
            android:textColor="@color/colorPrimary"/>
    </LinearLayout>

    <View
        android:background="@color/colorBackgroundMainView"
        android:layout_width="match_parent"
        android:layout_height="1dp" />

    <LinearLayout
        android:id="@+id/idVehicleInfo"
        android:layout_marginVertical="@dimen/half_vertical_margin"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:src="@drawable/ic_baseline_info_24"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:tint="@color/colorPrimary" />

        <TextView
            android:text="Vehicle Info"
            android:textColor="?attr/customTextHintColor"
            android:layout_marginHorizontal="@dimen/half_vertical_margin"
            android:textSize="@dimen/normal_text_size"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>

    <View
        android:background="@color/colorBackgroundMainView"
        android:layout_width="match_parent"
        android:layout_height="1dp" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/idUndefinedDR"
        android:paddingVertical="@dimen/half_vertical_margin"
        android:gravity="center_vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/idUnDr"
            android:src="@drawable/ic_baseline_password_24"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:ignore="MissingConstraints" />

        <TextView
            app:layout_constraintLeft_toRightOf="@id/idUnDr"
            android:text="Unidentified Driving"
            android:textColor="?attr/customTextHintColor"
            android:layout_marginHorizontal="@dimen/half_vertical_margin"
            android:textSize="@dimen/normal_text_size"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:ignore="MissingConstraints" />

        <TextView
            android:text="19"
            android:textColor="@color/colorPrimary"
            android:textSize="@dimen/card_text_size"
            app:layout_constraintRight_toRightOf="parent"
            android:background="@drawable/background_alert_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:ignore="MissingConstraints" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <View
        android:background="@color/colorBackgroundMainView"
        android:layout_width="match_parent"
        android:layout_height="1dp" />

    <View
        android:background="@color/colorBackgroundMainView"
        android:layout_width="match_parent"
        android:layout_height="1dp" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_marginVertical="@dimen/half_vertical_margin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/idEldDialConnect"
            android:text="@string/connect"
            android:textSize="@dimen/normal_text_size"
            android:textColor="@color/colorPrimary"
            android:fontFamily="@font/montserrat"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:ignore="MissingConstraints" />

        <TextView
            android:id="@+id/idEldDialDisconnect"
            android:text="@string/disconnect"
            android:textSize="@dimen/normal_text_size"
            android:textColor="@color/colorPrimary"
            android:fontFamily="@font/montserrat"
            android:textAllCaps="true"
            app:layout_constraintRight_toLeftOf="@id/idEldDialConnect"
            android:layout_marginHorizontal="@dimen/drawer_padding_size"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:ignore="MissingConstraints" />

        <TextView
            android:id="@+id/idEldDialCancel"
            android:text="@string/cancel"
            android:textSize="@dimen/normal_text_size"
            android:textColor="@color/colorPrimary"
            android:fontFamily="@font/montserrat"
            android:textAllCaps="true"
            app:font = "@font/montserrat"
            app:layout_constraintRight_toLeftOf="@id/idEldDialDisconnect"
            android:layout_marginHorizontal="@dimen/drawer_padding_size"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:ignore="MissingConstraints" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</LinearLayout>